<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <TextView
        android:id="@+id/GpodnetCategoriesHeader"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:lineSpacingExtra="24dp"
        android:paddingLeft="0dp"
        android:paddingTop="@dimen/screen_percentage_12"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="@string/gpodnet_categories"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="24dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/gpodnet_category_list_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:layout_below="@+id/GpodnetCategoriesHeader">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>